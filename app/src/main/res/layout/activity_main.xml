<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/mainscreenbackground"/>

    <TextView
        android:id="@+id/remindersLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="642dp"
        android:fontFamily="@font/baloo_tammudu"
        android:text="Reminders"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="73dp"
        android:scaleType="centerCrop"
        android:src="@drawable/calander_log"
        android:onClick="switchToCalanderPage"/>

    <EditText
        android:id="@+id/reminderTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReminderList"
        android:ems="20"
        android:textColor="@color/white"
        android:inputType="textShortMessage"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ReminderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "100dp"/>

    <ImageButton
        android:layout_width="196dp"
        android:layout_height="402dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="236dp"
        android:onClick="updateReminders"
        android:scaleType="centerCrop"
        android:src="@drawable/nebulawallpaper" />




</RelativeLayout>